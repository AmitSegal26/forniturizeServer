<!-- views/success.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Google SignIn</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <!-- load bootstrap css -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <!-- load fontawesome -->
    <style>
      :root {
        --degreeOfVibrate: 10deg;
      }
      @keyframes moveside {
        0% {
          transform: none;
        }
        50% {
          transform: translateX(-50px);
          box-shadow: -20px 10px 20px #000;
        }
        100% {
          transform: none;
        }
      }
      body {
        padding-top: 70px;
        cursor: progress;
      }
      img:hover {
        width: 10.5vw;
        animation-delay: 3s;
        /* animation: moveside 0.7s infinite ease-in-out; */
        animation: 2s ease-in-out 1s moveside infinite;
        /* transition-property: scale(1.3); */
        transition-duration: 1s;
        cursor: pointer;
      }
      img {
        box-shadow: 20px 10px 20px #000;
        float: right;
        width: 10vw;
        border-radius: 50%;
        border: 2px solid #000;
        overflow: hidden;
        transition: all 1s ease-in-out;
        transform: none;
        /* transition: all 0.5s; */
      }
      .custom-outline {
        border-radius: 25%;
        outline: 4px solid#ff0000;
        outline-offset: 3px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1 class="text-primary text-center">
          <span class="fa fa-user"></span> Profile Information
        </h1>
        <div class="row">
          <div class="col-sm-6">
            <div class="well">
              <p>
                <strong>First Name</strong>: <%= user.name.first %><br />
                <strong>Last Name</strong>: <%= user.name.last %><br />
                <img
                  src="<%= encodeURI(user.image.url) %>"
                  alt="Profile Picture"
                />
                <strong>Email</strong>: <%= user.email %><br />
                <strong>Phone</strong>: <%= user.phone %><br />
                <strong>Country</strong>: <%= user.address.country %><br />
                <strong>City</strong>: <%= user.address.city %><br />
                <strong>Street</strong>: <%= user.address.street %><br />
                <strong>House Number</strong>: <%= user.address.houseNumber %>
              </p>
            </div>
            <a class="btn btn-danger custom-outline" href="/logout">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
